
<header>
    <nav>
        <a href = "/">Home</a>
        
        {{#if loggedIn}}
            <a href = "/dashboard">Dashboard</a>
            <button id = "logout" class = "btn-no-style">Log Out</button>
        
        {{else}}
        <a href = "/login">Login</a>
    
        {{/if}}

    </nav>
    <h1>
        <a href="/dashboard">Your Dashboard</a>
    </h1>
</header>

<main>
    {{#if posts.length}}
    <section>
        <h2>Your Posts</h2>
        <ul>
            {{#each posts as |post|}}
                <li>
                    {{> post-info post}}
                </li>
            {{/each}}
        </ul>
    </section>
    {{/if}}
    
    <section>
        <button id="new-post-btn" type="button">New Post</button>
    </section>
</main>


<script src = "/javascript/add-post.js"></script>

{{#if loggedIn}}
<script src = "/javascript/logout.js"></script>
{{/if}}

</body>

</html>





